{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MonitorSwitcher",
  "version": "1.0.0",
  "identifier": "com.leo.monitor-switcher",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Monitor Switcher",
        "label": "main",
        "width": 420,
        "height": 500,
        "resizable": true,
        "minWidth": 350,
        "minHeight": 400,
        "center": true,
        "visible": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "resources": {
      "icons/menu/*": "icons/menu/"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  }
}
